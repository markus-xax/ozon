{% extends 'index/index.html.twig' %}
{% block linkStyles %}
    <style>{%include "error/styles.css"%}</style>
    <style>{%include "error/vendor.css"%}</style>
{% endblock %}
{%block body%}
    <div class="main-content container-fluid" id="mp-stats-app">
        <div id="global-loader-block" class="mp-loader-overlay ag-overlay hidden" aria-hidden="true">
            <div class="ag-overlay-panel">
                <div class="ag-overlay-wrapper ag-layout-normal ag-overlay-loading-wrapper">
                    <div class="mp-loader-static"></div>
                </div>
            </div>
        </div>

        <div class="be-error be-error-404">
            <!--        <div class="main-content container-fluid">-->
            <div class="error-container">
                <div class="error-number">{{ ex.statusCode??(ex.code??"0")}}</div>
                <div class="error-description">Запрашиваемой страницы нет на нашем проекте или у Вас нет прав доступа к ней.</div>
                <div class="error-goback-text">Хотите перейти на главную страницу?</div>
                {% if msg is not empty%}
                    <div>{{msg??''}}</div>
                {% endif %}
                <div class="error-goback-button"><a class="btn btn-xl btn-primary" href="/">На главную страницу</a></div>
            </div>
            <!--        </div>-->
        </div>

        <vue-snotify></vue-snotify>
    </div>
{%endblock%}